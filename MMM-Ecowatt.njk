<div class="MMM-Ecowatt small light">
	{% if not hasData %}
		Pas de donn√©es disponibles
	{% else %}
		{% for signalData in signals %}
			{% if showText %}
				<!-- Message ecowatt -->
				{{ signalData.message }} {{ signalData.displayDay }}
				<br/>
			{% endif %}

			{% if showGraph %}
				<!-- Graph ecowatt -->
				<table class="signalTable">
					<tr>
						{% for signalValue in signalData.values %}
							<td class={{"signalLoad" + signalValue.hvalue}}></td>
						{% endfor %}
					</tr>
					<tr class="signalHours">
						{% for signalValue in signalData.values %}
							{% if (signalValue.pas % 2 == 0) %}
								<td><span>{{ signalValue.pas }}h</span></td>
							{% else %}
								<td><span></span></td>
							{% endif %}
						{% endfor %}
					</tr>
				</table>
				<br/>
			{% endif %}
		{% endfor %}
	{% endif %}
</div>
